{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "sourceMap": true,
        "lib": ["dom", "es2017"],
        "noEmitHelpers": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "strict": true,
        "plugins": [
            {
                "name": "tslint-language-service",
                "alwaysShowRuleFailuresAsWarnings": true,
                "ignoreDefinitionFiles": true
            }
        ]
    },
    "exclude": ["demo", "dist"]
}
