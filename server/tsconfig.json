{
    "compilerOptions": {
        "declaration": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "target": "es6",
        "typeRoots": ["src/@types"],
        "types": ["node"],
        "plugins": [
            {
                "name": "tslint-language-service",
                "alwaysShowRuleFailuresAsWarnings": true,
                "ignoreDefinitionFiles": true
            }
        ]
    }
}
